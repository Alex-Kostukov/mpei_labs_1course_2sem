unit UnitFunc;

interface
uses
  UnitType;

function Checking (const a : TMas; n1, n2 : integer; x, y : real) : boolean;
function Sum (const a : TMas; n1, n2 : integer) : real;

implementation

function Checking (const a : TMas; n1, n2 : integer; x, y : real) : boolean;
begin
  if n1 = n2 then
    Result := ((a[n1] >= x) and (a[n1] <= y))
  else
    Result := ((a[n1] >= x) and (a[n1] <= y)) and Checking (a, n1 + 1, n2, x, y);
end;

function Sum (const a : TMas; n1, n2 : integer) : real;
begin
  if n1 = n2 then
    if sqrt(abs(a[n1])) < n1 + 1 then
      Result := a[n1]
    else
      Result := 0
  else
    Result := Sum (a, n1, (n1 + n2) div 2) + Sum (a, (n1 + n2) div 2 + 1, n2);
end;
end.
